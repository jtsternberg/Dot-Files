# A bash in_array.
# array=(one two three); contains one $array && echo 'yes' || echo 'no'
# Outputs 'yes'
contains () {
	param=$1;
	shift;
	for elem in "$@";
	do
		[[ "$param" = "$elem" ]] && return 0;
	done;
	return 1
}

# Loads... nvm.
loadnvm() {
	if [ -s "/opt/homebrew/opt/nvm/nvm.sh" ]
	then
		. "/opt/homebrew/opt/nvm/nvm.sh"
	fi

	if [ -s "/opt/homebrew/opt/nvm/etc/bash_completion" ]
	then
		. "/opt/homebrew/opt/nvm/etc/bash_completion"
	fi

	nvm use ${1-'20'}
}

google-chrome() {
	/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome $1
}

generate-key() {
	LENGTH=${1:-34}
	ALPHANUMERIC_ONLY=${2}
	KEY=$(php -r "
	\$chars = 'abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
	if (! '$ALPHANUMERIC_ONLY' ) {
		\$chars .= '\!\@#\$%^&*()_+-=[]{}|;:,.<>?/\~';
	}
	\$length = $LENGTH;
	\$key = '';
	for (\$i = 0; \$i < \$length; \$i++) {
		\$key .= \$chars[random_int(0, strlen(\$chars) - 1)];
	}
	echo \$key . PHP_EOL;
	")
	CAN_COPY=$(command -v pbcopy)
	if [ -n "$CAN_COPY" ]; then
		echo "$KEY" | tr -d '\n' | pbcopy;
		echo "$KEY\nLength: ${#KEY} (Copied to clipboard)";
	else
		echo "$KEY\n(length: ${#KEY})";
	fi
}

count-str-length() {
	 string="$1"
    trimmed_string="${string##*( )}"
    echo "${#trimmed_string}" | tr -d '\n';
}